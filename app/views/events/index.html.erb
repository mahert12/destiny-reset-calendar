<% if false %>
  <p id="notice"><%= notice %></p>

  <h1>Listing Events</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.start %></td>
          <td><%= event.end %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>

<% end %>

<h1>Destiny 2 Powerful Engram Reset Calendar</h1>

<% if @ending_tomorrow.where(title: "Weekly Reset").count != 0 %>
  <div class="weekly_alert">Weekly engrams reset tomorrow, hurry up Guardian.</div>
<% end %>

<br>

<% @ending_tomorrow.each do |event| %>
  <% unless event.title == "Weekly Reset" %>
    <div class="daily_alert">The <%= event.title %> is reseting tomorrow, better finish fast.</div>
  <% end %>
<% end %>

<div id="calendar"></div>
